<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytCard"
    style="@style/home_card_style"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlytCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/textCardTitle"
            style="@style/home_card_title_style"
            android:text="周边" />

        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textCardTitle"
            android:src="@drawable/ico_car" />

        <ImageView
            android:id="@+id/iv_card_menu"
            style="@style/home_card_img_down_style" />
    </RelativeLayout>

    <View
        android:id="@+id/lineTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbbbbb"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >
        
    </LinearLayout>

</LinearLayout>