<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/item_title"/>
    
    <LinearLayout 
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号：" />
        
        <EditText 
            android:id="@+id/ed_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的帐号" />
    </LinearLayout>
    
    
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/rl_volid"
        android:layout_below="@id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <EditText 
            android:id="@+id/ed_volid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码" />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_below="@id/rl_volid"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码：" />
        
        <EditText 
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请输入你的密码" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_below="@id/ll_password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/ll_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码：" />
        
        <EditText 
            android:id="@+id/ed_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请确认你的密码" />
    </LinearLayout>
    
    <Button 
        android:id="@+id/btn_register"
        android:layout_below="@id/ll_password_again"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:text="注册账号" />

    <Button
        android:id="@+id/btn_getvolid"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:padding="10dp"
        android:layout_alignBottom="@+id/rl_volid"
        android:layout_alignRight="@+id/ll_account"
        android:background="@drawable/button_selector"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="获取验证码" />

</RelativeLayout>

